<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.windows10gamer.connsql.Settings.Main_Danhmuc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Danh mục"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/tie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdanhmuctoday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_ngay"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="@dimen/muoi" />

        <Button
            android:id="@+id/btnthemdanhmuc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg125"
            android:drawableStart="@android:drawable/ic_input_add"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Thêm danh mục"
            android:textAlignment="center"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/btn" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvdanhmuc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/list_border" />
</LinearLayout>
