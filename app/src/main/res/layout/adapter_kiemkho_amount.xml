<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvAdapterSalesTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="@dimen/hai"
                tools:text="Tai nghe Bluetooth Hoco E12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/âs"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvAdapterSalesMa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="@dimen/muoi"
                        tools:text="MSP: TN240" />

                    <TextView
                        android:id="@+id/tvAdapterSalesBaohanh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:textAlignment="textEnd"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="@dimen/muoi"
                        tools:text="Bảo hành: 6 tháng" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvAdapterSalesNgaynhap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/âs"
                        android:paddingLeft="10dp"
                        android:text="Quét lúc 20:08:57"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="@dimen/hai"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAdapterSalesGia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/âs"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:textAlignment="textEnd"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="@dimen/hai"
                        android:textStyle="bold"
                        tools:text="120.000 đ" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="X"
                    android:textSize="@dimen/bon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:padding="3dp">

                <EditText
                    android:id="@+id/edsoluong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_soluong"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textColorHint="@android:color/black"
                    android:textSize="@dimen/bon"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>