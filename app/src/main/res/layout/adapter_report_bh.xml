<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/adapter_bh_maBH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:drawableStart="@android:drawable/btn_star_big_on"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="@dimen/hai" />

        <TextView
            android:id="@+id/adapter_bh_tennv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableEnd="@drawable/ic_bh"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="@dimen/muoi" />
    </LinearLayout>
</LinearLayout>