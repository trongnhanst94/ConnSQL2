<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_greyish"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.windows10gamer.connsql.Main"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg125"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/lnchinhanh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/ic_place"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Chọn:"
                    android:textSize="@dimen/muoi" />

                <TextView
                    android:id="@+id/tvchinhanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textAllCaps="false"
                    android:textColor="@color/RED"
                    android:textSize="@dimen/bon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnHide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/tgh"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivHide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:srcCompat="@drawable/ic_up_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/lnHide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_ln"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:weightSum="9">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_doanhthue"
                                    android:gravity="center_vertical"
                                    android:text="Ca làm việc"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/muoi_nho" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvdica"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingStart="15dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="@dimen/bon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_trensp"
                                    android:gravity="center_vertical"
                                    android:text="Tháng làm việc"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/muoi_nho" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvthang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingStart="15dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="@dimen/bon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_trenkh"
                                    android:gravity="center_vertical"
                                    android:text="Lũy kế lương"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/muoi_nho" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvluykeluong"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingStart="15dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="@dimen/bon" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="9">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_khachhangs"
                                    android:gravity="center_vertical"
                                    android:text="Doanh thu hiện tại"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/muoi_nho" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/mdoanhthu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingStart="15dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="@dimen/bon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_nhv"
                                    android:gravity="center_vertical"
                                    android:text="Khách/tháng"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/muoi_nho" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/khachhang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingStart="15dp"
                                android:textAllCaps="false"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="@dimen/bon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_sanpham"
                                    android:gravity="center_vertical"
                                    android:text="Sản phẩm/tháng"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/muoi_nho" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/sanpham"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingStart="15dp"
                                android:textAllCaps="false"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="@dimen/bon"
                                android:textStyle="normal" />
                        </LinearLayout>

                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="8">

                                <TextView
                                    android:id="@+id/textView44"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:background="@color/tgh"
                                    android:padding="3dp"
                                    android:text="Hạng mục"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView43"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:background="@color/tgh"
                                    android:padding="3dp"
                                    android:text="Kết quả/Chỉ tiêu"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView35"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:background="@color/tgh"
                                    android:padding="3dp"
                                    android:text="%"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:weightSum="8">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/body_row"
                                    android:paddingLeft="15dp"
                                    android:text="Số ca"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/tvsoca"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/ptdica"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:weightSum="8">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/body_row"
                                    android:paddingLeft="15dp"
                                    android:text="Giờ tăng ca"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/tvtangca"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:weightSum="8">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/body_row"
                                    android:paddingLeft="15dp"
                                    android:text="Doanh thu"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/tvdt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/ptdt"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:weightSum="8">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/body_row"
                                    android:paddingLeft="15dp"
                                    android:text="DT/KH"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/tvdtkh"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/ptdtkh"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:weightSum="8">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/body_row"
                                    android:paddingLeft="15dp"
                                    android:text="SP/KH"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/tvspkh"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi" />

                                <TextView
                                    android:id="@+id/ptspkh"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/body_row"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/muoi"
                                    android:textStyle="bold" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="end">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    android:text="iDeal is a project by Dealtichtac \n © 2017. Design by EV"
                    android:textAlignment="center"
                    android:textSize="@dimen/btn" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
