<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_greyish"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.windows10gamer.connsql.Main"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvchinhanh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_action_name"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Quét mã sản phẩm: "
                android:textColor="@color/RED"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <Button
                android:id="@+id/btnScanQR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_warehouse"
                android:paddingLeft="20dp"
                android:text="Kiểm kho"/>

            <Button
                android:id="@+id/btnDanhsachkiemkho"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_list2"
                android:paddingLeft="20dp"
                android:text="List kiểm kho" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_sale"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="20dp"
                android:text="Bán hàng" />

            <Button
                android:id="@+id/btnListOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_list3"
                android:paddingLeft="20dp"
                android:text="List đơn hàng" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnBaohanh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_engineer"
                android:paddingLeft="20dp"
                android:text="BẢO HÀNH" />

            <Button
                android:id="@+id/btnReportBaohanh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_list1"
                android:paddingLeft="20dp"
                android:text="List bảo hành" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnRealtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_time"
                android:paddingLeft="20dp"
                android:text="Real-time"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnXuatnhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg125"
                android:drawableStart="@drawable/ic_reverse"
                android:paddingLeft="20dp"
                android:text="Xuất - Nhập"
                android:textSize="11sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/btnWeb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:paddingLeft="20dp"
                android:text="WEBSITE" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:background="@drawable/bg125"
                android:paddingLeft="20dp"
                android:text="None" />
        </TableRow>

    </TableLayout>

</LinearLayout>
